<header>
 <h1 class="h2">Track Package</h2>
</header>

<section class="search-form">
<%= form_for :packages, method: :get do |f| %>
 <div class="input-group input-group-lg">
  <%= label_tag :keywords, nil, class: "sr-only" %>
  <%= text_field_tag :keywords, nil, placeholder: "Track your package", class: "form-control input-lg" %>
  <span class="input-group-btn">
   <%= submit_tag "Track package", class: "btn btn-primary btn-lg" %>
  </span>
 </div>
<% end %>
</section>

  <section class="search-results">
    <header>
       <h1 class="h3">Results</h1>
    </header>
    <table class="table table-striped">
    <thead>
     <tr>
       <th>Location</th>
       <th>Notice</th>
       <th>Checked in</th>
       <th>Opened</th>
     </tr>
</thead>
<tbody>
<% @packages.each do |customer| %>
<tr>
<td><%= customer.description %></td>
<td><%= customer.rv_city %></td>
<td><%= link_to customer.tracking, new_package_check_ins_path(customer) %></td>
<td><%= l customer.created_at.to_date %></td>
</tr>
<% end %>
</tbody>
</table>
</section>

